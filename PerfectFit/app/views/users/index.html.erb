<% provide(:title, 'All users') %>
<h1>All users</h1>

<ul class="users">
  <% @users.each do |user| %>
    <li>
    	<%= user.profile.first_name %>
    	<%= user.profile.last_name %>
      <%= link_to user.email, user %>
     
      <% if !(user.admin) %>
       	<%= link_to "delete", user, method: :delete, data: { confirm: "Are you sure you want to Delete #{user.email}?" } %>
       	<%= link_to "Set as Admin", set_admin_user_path(user.id), method: :put %>
      <% elsif user != current_user %>
      	<%= link_to "Remove Admin", set_admin_user_path(user.id), method: :put %>

      <% end %>
    </li>
  <% end %>
</ul>