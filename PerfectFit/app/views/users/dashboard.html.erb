<h1> Dashboard </h1>
<%= link_to 'Add New Activity', '/log_activity' %><br>
<%= link_to 'Edit Profile', '/edit_profile' %>
Age is: <%= user_age %>
<h1> Calories Graph </h1>
<div style="height:400px; width:50%">
<%= link_to "1 Week", "/dashboard?display=#{1.weeks.ago}" %> <%= link_to "1 Month", "/dashboard?display=#{1.month.ago}" %> <%= link_to "3 Month", "/dashboard?display=#{3.month.ago}" %>
<%= content_tag :div, "", id: "calories_chart", data: {calories: @user.chart_data} %>
</div>




<h1>Listing activities in the last weeek</h1>
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Activity type</th>
      <th>Duration</th>
      <th>Calories</th>
      <th>Distance</th>
      <th>Steps</th>
      <th>Floors</th>
      <th>Laps</th>
      <th>Mood</th>
      <th>Notes</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @user.activities.where('date >= ?', 2.week.ago).each do |activity| %>
      <tr>
        <td><%= activity.date %></td>
        <td><%= activity.activity_type %></td>
        <td><%= activity.duration %></td>
        <td><%= activity.calories %></td>
        <td><%= activity.distance %></td>
        <td><%= activity.steps %></td>
        <td><%= activity.floors %></td>
        <td><%= activity.laps %></td>
        <td><%= activity.mood %></td>
        <td><%= activity.notes %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

