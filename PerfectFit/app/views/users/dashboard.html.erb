<h1> Dashboard </h1>
<%= link_to 'Add New Activity', '/log_activity' %><br>
<%= link_to 'Add New Health Indicator', new_health_path %><br>
<%= link_to 'Edit Profile', '/edit_profile' %>


<table width ="100%"
  <tr>
    <td width="50%">
      <div style="height:400px">
      <h1> Calories Graph </h1>
      <%= link_to "1 Week", "/dashboard?display=#{1.weeks.ago}" %> <%= link_to "1 Month", "/dashboard?display=#{1.month.ago}" %> <%= link_to "3 Month", "/dashboard?display=#{3.month.ago}" %>
      <%= content_tag :div, "", id: "calories_chart", data: {calories: @user.chart_data} %>
      </div>
    </td>
    <td>
      <div style="height:400px">
        <h1> Weight Graph </h1>
        <br>
      <%= content_tag :div, "", id: "weight_chart", data: {weight: @user.healths_chart_data, target: @user.target} %>
      </div>
    </td>
  </tr>
</table>
<br> 
<p></p>
<br>


<h1>Listing activities from the last week</h1>
<table align=center>
  <thead>
    <tr>
      <th>Date</th>
      <th>Activity type</th>
      <th>Duration</th>
      <th>Calories</th>
      <th>Options</th>
    </tr>
  </thead>

  <tbody>
    <% @user.activities.where('date >= ?', 2.week.ago).each do |activity| %>
      <tr>
        <td><%= activity.date %></td>
        <td><%= activity.activity_type %></td>
        <td><%= activity.duration %></td>
        <td><%= activity.calories %></td>
        <td><%= link_to 'Show', activity %> | <%= link_to 'Edit', edit_activity_path(activity) %> | <%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Show All', 'activities#index' %>


