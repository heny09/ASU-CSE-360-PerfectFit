<%= form_for(@activity) do |f| %>
  <% if @activity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@activity.errors.count, "error") %> prohibited this activity from being saved:</h2>

      <ul>
      <% @activity.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.hidden_field :user_id %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.datetime_select :date %>
  </div>
  <div class="field">
    <%= f.label :activity_type %>*<br>
    <%= f.select :activity_type, options_for_select(['Aerobics','Archery','Basketball','Baseball','Bicycling','Croquet','Gymnastics','Hiking','Hockey','Football','Jogging','Jump Rope','Lacrosse','Motorsports','Pilates','Polo','Racquetball','Rock Climbing','Rowing','Running','Skiing','Snowboarding','Skateboarding','Sleeping','Soccer','Swimming (leisure)','Swimming (strenuous)','Tennis','Track and Field','Volleyball','Walking','Weight-lifting','Yoga']), :required => true, :prompt => "Select Activity" %>
  </div>
  <div class="field">
    <%= f.label :duration %><br>
        Enter Duration in hours and minutes:<br>
    <%= f.number_field :hours, :size => 2 %> :
    <%= f.number_field :minutes, :size => 2 %>
  </div>
  <div class="field">
    <%= f.label :calories %><br>
    <%= f.number_field :calories %>
  </div>
  <div class="field">
    <%= f.label :distance %><br>
    <%= f.number_field :distance %>
  </div>
  <div class="field">
    <%= f.label :steps %><br>
    <%= f.number_field :steps %>
  </div>
  <div class="field">
    <%= f.label :floors %><br>
    <%= f.number_field :floors %>
  </div>
  <div class="field">
    <%= f.label :laps %><br>
    <%= f.number_field :laps %>
  </div>
  <div class="field">
    <%= f.label :mood %><br>
    <%= f.text_field :mood %>
  </div>
  <div class="field">
    <%= f.label :notes %><br>
    <%= f.text_area :notes %>
  </div>
  <p>
  <div class="actions">
    <%= f.submit %>
  </div>
  <p></p>
<% end %>
